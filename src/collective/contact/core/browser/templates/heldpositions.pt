<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      tal:define="portal_url context/@@plone_portal_state/portal_url;"
      i18n:domain="collective.contact.core" tal:omit-tag="">

    <div id="held_positions" class="field" tal:condition="view/held_positions">
        <h2 i18n:translate="">Positions</h2>
        <tal:block tal:repeat="held_position view/held_positions">
            <div class="held_position" tal:define="url held_position/object/absolute_url">

              <div class="actions">
                <a class="edit-held-position" tal:attributes="href string:${url}/edit">
                  <img alt="Edit" tal:attributes="src string:${portal_url}/edit.png" i18n:attributes="alt" />
                </a>
                <a class="delete-held-position" tal:attributes="href string:${url}/delete_confirmation">
                  <img alt="Delete" tal:attributes="src string:${portal_url}/delete_icon.png" i18n:attributes="alt" />
                </a>
              </div>

              <h3 tal:content="held_position/label" i18n:translate="" />

              <div class="field" tal:condition="held_position/start_date">
                <label><tal:block i18n:translate="">Start date</tal:block>:</label>
                <span tal:content="held_position/start_date" i18n:translate="" />
              </div>

              <div tal:replace="structure held_position/object/@@contactdetails" />

              <div class="organization" tal:define="organization nocall:held_position/organization">
                  <div id="logo" class="field" tal:condition="organization/logo">
                      <img tal:define="scales nocall:organization/@@images"
                           tal:replace="structure python:scales.tag('logo', 'tile', css_class='photo')"
                           tal:on-error="string:Bad logo format" />
                  </div>
                  <h4 tal:content="organization/Title" />

                  <div tal:replace="structure held_position/organization/@@contactdetails" />
              </div>
            </div>
        </tal:block>
    </div>

</html>