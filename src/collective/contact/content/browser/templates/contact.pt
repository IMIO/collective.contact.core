<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.contact.content">
<body>

<div metal:fill-slot="main">
	<h1 tal:content="view/fullname"></h1>

	<div class="field" tal:condition="view/position_name">
		<label i18n:translate="">Position : </label>
		<span tal:content="view/position_name"
		 	  i18n:translate="" />
	</div>

    <div id="organizations" class="field">
        <label i18n:translate="">List of organizations : </label>
        <ul>
        <tal:block tal:repeat="organization view/organizations">
            <li><a tal:attributes="href organization/absolute_url">
                <span tal:replace="organization/Title"
                      i18n:translate="" />
            </a></li>
        </tal:block>
        </ul>
    </div>

	<div class="field">
		<label i18n:translate="">Start date : </label>
		<span tal:content="view/start_date"
		 	  i18n:translate="" />
	</div>

	<div class="field">
		<label i18n:translate="">End date : </label>
		<span tal:content="view/end_date"
		 	  i18n:translate="" />
	</div>

    <div class="field">
        <label i18n:translate="">Birthday : </label>
        <span tal:content="view/birthday"
              i18n:translate="" />
    </div>

	<div id="address"
	     tal:replace="structure view/render_address" />

	<div id="download_vcard">
		<a i18n:translate="" href="">Download VCard</a>
	</div>

</div>

</body>
</html>