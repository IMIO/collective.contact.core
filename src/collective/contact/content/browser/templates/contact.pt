<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.contact.content">
<body>

<div metal:fill-slot="main">
	<h1 tal:content="view/fullname"></h1>

	<div tal:condition="view/position_name">
		<span i18n:translate="">Position : </span>
		<span tal:content="view/position_name"
		 	  i18n:translate="" />
	</div>

	<div>
		<span i18n:translate="">List of organizations : </span>
		<tal:block tal:repeat="organization view/organizations_names">
			<span tal:content="organization"
			 	  i18n:translate="" />
		</tal:block>
	</div>

	<div>
		<span i18n:translate="">Birthday : </span>
		<span tal:content="view/birthday"
		 	  i18n:translate="" />
	</div>
	<div>
		<span i18n:translate="">Start date : </span>
		<span tal:content="view/start_date"
		 	  i18n:translate="" />
	</div>
	<div>
		<span i18n:translate="">End date : </span>
		<span tal:content="view/end_date"
		 	  i18n:translate="" />
	</div>

	<div id="address"
	     tal:replace="structure view/render_address" />

	<div id="download_vcard">
		<a i18n:translate="" href="">Download VCard</a>
	</div>

</div>

</body>
</html>